<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
        crossorigin="anonymous">
    <title>New Wedding</title>
</head>

<body>
    <div class="jumbotron">
        <h1>Plan Your Wedding</h1>
        <div class="text-right">
           <p><a href="/Weddings">Dashboard</a>   |   <a href="/logouot">Logout</a></p>
        </div>
    </div>
    <div class="container">
        @model Wedding
        <form action="/CreateWedding" method="post">
            <span asp-validation-for="@Model.groom"></span>
            <label asp-for="@Model.groom">groom</label>
            <input asp-for="@Model.groom"><br>
            <span asp-validation-for="@Model.bride"></span>
            <label asp-for="@Model.bride">bride</label>
            <input asp-for="@Model.bride"><br>
            <label asp-for="@Model.date">date of Wedding:</label>
            <input asp-for="@Model.date" type="date" value="2018-05" />
            <span class="validity"></span><br><br>
            <span asp-validation-for="@Model.address"></span>
            <label asp-for="@Model.address">Address</label>
            <input asp-for="@Model.address"><br>
            <input value="Create" type="submit">
        </form>
    </div>
</body>

</html>